<script type="text/javascript">

	var check_url_validity = window.location.search.substring(1);

	if(check_url_validity == "invalid_username")
	{
		$(document).ready(function(){
			$("#username_validity").show();
			$("#query_validity").hide();
		});
	}
	else if(check_url_validity == "invalid_inputs")
	{
		$(document).ready(function(){
			$("#query_validity").show();
			$("#username_validity").hide()
		});
	}
	else
	{
		$(document).ready(function(){
			$("#query_validity").hide();
			$("#username_validity").hide();
		});
	}
</script>